extends layout

block selectedLink
  -var selected = '/list/departments';

block content-head
  h1 Departments
  
block content-body
  table#list
    thead
      tr
        th Department name
        th Edit
        th Delete
    tbody
      each department, index in departments
        tr
          td= department.name
          td
            a.button(href='#') Edit
          td
            a.button(href='#') Delete