extends layout

block selectedLink
  -var selected = (edit ? '' : '/add/department');

block content-head
  h1= (edit ? 'Edit Department' : 'Add Department')

-var department_name = edit.department_name;

block content-body
  form#add-edit(method='post')
    table
      tbody
        tr
          td
            label(for='department_name') Department name

        tr
          td
            input.text(type='input', name='department_name', id='department_name', required, value=(edit ? edit.department_name : ""))

        tr
          td(colspan='2')
            input.button(type='submit', value=(edit ? 'Update' : 'Add') + ' department')
         