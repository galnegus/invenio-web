doctype html
html
  head
    link(href='//fonts.googleapis.com/css?family=Open+Sans:300italic,300,400italic,400,600italic,600,700italic,700,800italic,800', rel='stylesheet', type="text/css")
    title Invenio Server Admin
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js')
    script(src='/javascripts/angular-route.min.js')
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div#wrapper

      block selectedLink
        -var selected = '/';

      -var nav = ['Edit/Delete', ['List Users', '/list/users'], ['List Roles', '/list/roles'], ['List Departments', '/list/departments'], ['List Rooms', '/list/rooms'], ['List Beacons', '/list/beacons'], ['List Phone Number Types', '/list/phone-number-types'], 'Add', ['Add User', '/add/user'], ['Add Role', '/add/role'], ['Add Department', '/add/department'], ['Add Room', '/add/room'], ['Add Beacon', '/add/beacon'], ['Add Phone Number Type', '/add/phone-number-type']];

      div#sidebar
        div#navigation
          ul
            each val, index in nav
              if typeof val == 'string'
                li
                  h2= val
              else
                if selected === val[1]
                  li
                    a.button.selected(href=val[1], title=val[0])= val[0]
                else
                  li
                    a.button(href=val[1], title=val[0])= val[0]
      div#content-head
          block content-head
      div#content
        div#content-body
          block content-body