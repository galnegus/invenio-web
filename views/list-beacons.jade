extends layout

block selectedLink
  -var selected = '/list/beacons';

block content-head
  h1 Beacons
  
block content-body
  table#list
    thead
      tr
        th Major
        th Minor
        th Room
        th Department
        th Edit
        th Delete
    tbody
      each beacon, index in beacons
        tr
          td= beacon.major
          td= beacon.minor
          td= beacon.room
          td= beacon.department
          td
            a.button(href='#') Edit
          td
            a.button(href='#') Delete