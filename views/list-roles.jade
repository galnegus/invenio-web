extends layout

block selectedLink
  -var selected = '/list/roles';

block content-head
  h1 Roles
  
block content-body
  table#list
    thead
      tr
        th Role title
        th Edit
        th Delete
    tbody
      each role, index in roles
        tr
          td= role.title
          td
            a.button(href='#') Edit
          td
            a.button(href='#') Delete